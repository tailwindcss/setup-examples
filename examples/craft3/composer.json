{
    "require": {
        "craftcms/cms": "^3.0",
        "vlucas/phpdotenv": "^2.4.0",
        "craftcms/redactor": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "modules\\sitemodule\\": "modules/sitemodule/src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.0"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
